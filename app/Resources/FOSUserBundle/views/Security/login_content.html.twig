    {% trans_default_domain 'FOSUserBundle' %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<div class="login">
    <h1>Connexion</h1>
<form action="{{ path("fos_user_security_check") }}" method="post">

    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <input placeholder="Pseudo" class="span12" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <input placeholder="Mot de passe" class="span12"  type="password" id="password" name="_password" required="required" />



    <button class="btn btn-primary btn-block btn-large" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />Connexion</button>
    <a href="{{ path('fos_user_registration_register') }}">Je n'ai pas d'espace personnel</a>

</form>
</div>


