<div class="container-fluid viewtop">
    <div class="row">
        <div class="col-xs-2">
            <span>
                <i style="color:#337ab7;" class="fa fa-star-o fa-inverse fa-3x" id="rating"></i>
                <p style="color: #337ab7; margin-left: 4px;"> {{ user.score }} points</p>
            </span>
        </div>
        <div style="color:#337ab7;" class="col-xs-7" id="pseudo">
            <h2>{{ user.username }}</h2>
        </div>
        <div class="col-xs-3 pull-right" id="avatar">
            <img src="http://placehold.it/350x350" alt="myAvatar" class="img-circle img-responsive">

        </div>
    </div>
</div>